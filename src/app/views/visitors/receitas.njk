{% extends "visitors/layout.njk" %}  

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock %}

        {% block content %}

            {% if items == "0" %}
                <p>Nenhuma receita cadastrada no momento &#x1F963;</p>
            {% endif %}

            <div class="galeria-receitas">

                {% for item in items %}
                <div class="receita">
                    <div class="img-prato">
                        <img src="{{item.imageFeatured}}" alt="{{item.title}}">
                    </div>

                    <div class="info-prato">
                        <h3>{{item.title}}</h3>
                        <span class="info-chef">por {{item.chef_name}}</span>
                    </div>

                    <input type="hidden" name="id" value="{{item.id}}">
                </div>
                {% endfor %}               

            </div>

            <div class="pagination"
                data-page="{{pagination.page}}"                
                data-total="{{pagination.total}}"
            >                
            </div>
            
            <script src="/js/pagination.js"></script>
            <script src="/js/script-foodfy.js"></script>

    {% endblock %}

    {% block footer %}
    <footer>
                <p>
                    <small>&copy; Todos os direitos reservados, receitas Foodfy.</small>
                </p>
    </footer>
    {% endblock %}