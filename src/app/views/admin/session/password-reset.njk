{% extends "admin/session/session.njk" %}

{% block content %}
    <section class="login">
        <h2>Nova Senha</h2>

        <form action="/admin/users/password-reset" method="POST">

            <div class="fields">
                <label>Email</label>
                <input type="email" 
                        name="email" 
                        value="{{user.email}}" 
                        placeholder="Digite seu email"
                        onblur="Validate.apply(this, 'isEmail')"
                         
                        {% if error %} class="field-error" {% endif %}
                >
            </div>

            <div class="fields">
                <label>Nova Senha</label>
                <input type="password" name="password"  placeholder="Digite uma nova senha" {% if error %} class="field-error" {% endif %}>
            </div>

            <div class="fields">
                <label>Repetir Senha</label>
                <input type="password" name="passwordRepeat"  placeholder="Repita sua senha" {% if error %} class="field-error" {% endif %}>
            </div>

            <input type="hidden" name="token" value="{{token}}">

            <div id="btn-password-reset">                
                <button type="submit">Nova Senha</button>
            </div>

        </form>

    </section>    

{% endblock %}
    