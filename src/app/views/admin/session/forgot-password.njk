{% extends "admin/session/session.njk" %}

{% block content %}
    <section class="forgot-password">
        <h2>Esqueceu a Senha?</h2>

        <form action="/admin/users/forgot-password" method="POST">

            <div class="fields">
                <label>Email</label>
                <input type="email" 
                        name="email" 
                        value="{{user.email}}" 
                        placeholder="Digite seu email cadastrado"
                        onblur="Validate.apply(this, 'isEmail')"
                         
                        {% if error %} class="field-error" {% endif %}
                >
            </div>

            

            <div id="btn-forgot-password">                
                <button type="submit">Recuperar</button>
            </div>

        </form>

    </section> 

      

{% endblock %}
    